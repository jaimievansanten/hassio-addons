{
    "name": "Datadog Agent",
    "version": "agent_only",
    "slug": "datadog-agent",
    "image": "maauso/dd-agent-arm-rpi",
    "description": "Agent to stream your Home Assistant metrics to Datadog",
    "url": "https://github.com/jaimievansanten/hassio-addons/tree/master/datadog-agent",
    "startup": "system",    
    "boot": "auto",
    "ports": {"8125/udp": 8125},
    "host_network": true,
    "environment": {
        "SD_BACKEND": "docker",
        "NON_LOCAL_TRAFFIC": false
    },
    "options": {
        "API_KEY": ""
    },
    "schema": {
        "API_KEY": "str"
    }
}